#include <iostream>
using namespace std;

class MinHeap {
public:
    int arr[100];   // heap array
    int size;       // current heap size

    // Constructor
    MinHeap() {
        arr[0] = -1;   // unused (heap starts at index 1)
        size = 0;
    }

    // ------------------------
    // INSERTION (Min Heap)
    // ------------------------
    void insert(int value) {
        size++;
        int index = size;
        arr[index] = value;

        // Heapify UP
        while (index > 1) {
            int parent = index / 2;

            if (arr[parent] > arr[index]) {
                swap(arr[parent], arr[index]);
                index = parent;
            } else {
                return;
            }
        }
    }

    // ------------------------
    // DELETION (Delete Root / Minimum)
    // ------------------------
    void deleteRoot() {
        if (size == 0) {
            cout << "Heap is empty!\n";
            return;
        }

        // Move last element to root
        arr[1] = arr[size];
        size--;

        int index = 1;

        // Heapify DOWN
        while (true) {
            int left = 2 * index;
            int right = 2 * index + 1;
            int smallest = index;

            if (left <= size && arr[left] < arr[smallest])
                smallest = left;

            if (right <= size && arr[right] < arr[smallest])
                smallest = right;

            if (smallest == index)
                break;

            swap(arr[index], arr[smallest]);
            index = smallest;
        }
    }

    // Print heap elements
    void print() {
        for (int i = 1; i <= size; i++) {
            cout << arr[i] << " ";
        }
        cout << endl;
    }
};

int main() {
    MinHeap h;

    h.insert(50);
    h.insert(30);
    h.insert(40);
    h.insert(10);
    h.insert(20);

    cout << "Min Heap after insertions: ";
    h.print();

    h.deleteRoot();
    cout << "Min Heap after deleting root: ";
    h.print();

    return 0;
}
