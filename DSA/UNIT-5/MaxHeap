#include <iostream>
using namespace std;

class MaxHeap {
public:
    int arr[100];   // static heap array
    int size;       // current number of elements

    MaxHeap() {
        arr[0] = -1;   // unused, heap starts at index 1
        size = 0;
    }

    // ------------------------
    // INSERTION
    // ------------------------
    void insert(int value) {
        size++;                // increase heap size
        int index = size;
        arr[index] = value;    // place the value at end

        // Fix heap by percolating up
        while (index > 1) {
            int parent = index / 2;
            if (arr[parent] < arr[index]) {
                swap(arr[parent], arr[index]);
                index = parent;
            } else {
                return;
            }
        }
    }

    // ------------------------
    // DELETION (DELETE ROOT)
    // ------------------------
    void deleteRoot() {
        if (size == 0) {
            cout << "Heap is empty!\n";
            return;
        }

        // Step 1: replace root with last node
        arr[1] = arr[size];
        size--;

        // Step 2: heapify down from root
        int index = 1;

        while (true) {
            int left = 2 * index;
            int right = 2 * index + 1;
            int largest = index;

            if (left <= size && arr[left] > arr[largest])
                largest = left;

            if (right <= size && arr[right] > arr[largest])
                largest = right;

            // If root is already largest, stop
            if (largest == index)
                break;

            swap(arr[index], arr[largest]);
            index = largest;
        }
    }

    // Print heap elements
    void print() {
        for (int i = 1; i <= size; i++) {
            cout << arr[i] << " ";
        }
        cout << endl;
    }
};

int main() {
    MaxHeap h;

    h.insert(50);
    h.insert(30);
    h.insert(40);
    h.insert(10);
    h.insert(20);
    h.insert(35);

    cout << "Heap after insertions: ";
    h.print();

    h.deleteRoot();
    cout << "Heap after deleting root: ";
    h.print();

    return 0;
}
